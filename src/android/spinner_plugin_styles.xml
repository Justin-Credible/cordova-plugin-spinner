<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SpinnerPluginTransparentDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/spinner_transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/spinner_transparent</item>
        <item name="android:bottomDark">@color/spinner_transparent</item>
        <item name="android:bottomMedium">@color/spinner_transparent</item>
        <item name="android:centerBright">@color/spinner_transparent</item>
        <item name="android:centerDark">@color/spinner_transparent</item>
        <item name="android:centerMedium">@color/spinner_transparent</item>
        <item name="android:fullBright">@color/spinner_transparent</item>
        <item name="android:fullDark">@color/spinner_transparent</item>
        <item name="android:topBright">@color/spinner_transparent</item>
        <item name="android:topDark">@color/spinner_transparent</item>
    </style>
    <color name="spinner_transparent">#00000000</color>
</resources>
